{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"outDir": "build",
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"node"
		]
	},
	"include": [
		"server/**/*.ts",
		"server/*.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],
	"compileOnSave": true
}
