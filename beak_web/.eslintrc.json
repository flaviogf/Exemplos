{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "react/jsx-filename-extension": "off",
    "react/destructuring-assignment": "off",
    "import/prefer-default-export": "off",
    "no-unused-expressions": "off",
    "linebreak-style": "off",
    "global-require": "off",
    "no-console": "off",
    "semi": "off"
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": {
        "rootPathSuffix": "./src",
        "rootPathPrefix": "@"
      }
    }
  }
}
